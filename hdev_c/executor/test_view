SELECT * FROM `rent_operations` a,payment_operations b WHERE a.start_date <= CURRENT_TIMESTAMP() AND a.end_date >= CURRENT_TIMESTAMP() AND a.re_id=b.re_id AND b.p_status='successful' 
UNION
SELECT * FROM `rent_operations` a right join payment_operations b on a.re_id=b.re_id WHERE a.start_date <= CURRENT_TIMESTAMP() AND ADDDATE(a.end_date, INTERVAL 15 DAY) >= CURRENT_TIMESTAMP() AND TIME_TO_SEC(TIMEDIFF(a.re_reg_exp_date, CURRENT_TIMESTAMP())) > 0 AND b.p_status='p'